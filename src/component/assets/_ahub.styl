$BLOCK_MARGIN = 4px

body
  margin: 0
  font-family: Cousine,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif
  letter-spacing: 0.44px
  line-height: 1.76
  height: auto

main
  padding: 0px $BLOCK_MARGIN 80px
  margin: auto

/* header */
header
  margin: 2.5em 0px 1.2em
  text-align: center

#header_image
  margin-bottom: 1.34em

#header_image div
  display: inline-block
  width: 6em
  height: 6em
  border-radius: 3px
  background-size: contain
  background-position: center
  background-repeat: no-repeat

#header_title
  line-height: 1.4

#header_title a
  text-decoration: none
  color: inherit


// #header_description

/* links */
.links_container
  display: flex

.link_block
  margin: $BLOCK_MARGIN
  position: relative
  border-radius: 3px
  padding: 5px 20px 10px
  height: auto
  background-color: #f7f7f7

.link_title
  text-align: center
  font-size: 0.85em
  font-weight: 100
  letter-spacing: 1px

.link_title span
  border-bottom: solid 1px
  padding: 0px 4px

.link_href
  display: block
  max-width: 7.5em
  height: 7.5em
  margin: 0.8em auto 2.2em

.link_href div
  border-radius: 3px
  height: 100%
  background-size: contain
  background-position: center
  background-repeat: no-repeat

.link_hub
  position: absolute
  bottom: 2px
  right: 8px
  text-align: center

.link_hub a
  text-decoration: none
  color: inherit
  font-weight: bold

#to_root
  position: fixed
  top: 0
  right: 0

#to_root a
  color: inherit
  display: block
  font-size: 3em
  line-height: 1.2
  font-weight: bold
  padding: 6px 12px
  text-decoration: none